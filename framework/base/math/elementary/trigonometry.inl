///////////////////////////////////////////////////////////////////////////////////////
M_FORCEINL float msin(float x)
{
    return sinf(x);
}
///////////////////////////////////////////////////////////////////////////////////////
M_FORCEINL double msin(double x)
{
    return sin(x);
}

///////////////////////////////////////////////////////////////////////////////////////
M_FORCEINL float mcos(float x)
{
    return cosf(x);
}
///////////////////////////////////////////////////////////////////////////////////////
M_FORCEINL double mcos(double x)
{
    return cos(x);
}

///////////////////////////////////////////////////////////////////////////////////////
M_FORCEINL void  msincos(float angle, float &sin_val, float &cos_val)
{
    sin_val = msin(angle);
    cos_val = mcos(angle);
}
///////////////////////////////////////////////////////////////////////////////////////
M_FORCEINL void  msincos(double angle, double &sin_val, double &cos_val)
{
    sin_val = msin(angle);
    cos_val = mcos(angle);
}

