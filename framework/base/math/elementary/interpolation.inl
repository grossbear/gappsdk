///////////////////////////////////////////////////////////////////////////////////////
// Linear interpolation of two variables
///////////////////////////////////////////////////////////////////////////////////////
template <typename TReal>
M_FORCEINL TReal    mlerp(TReal v1, TReal v2, TReal factor)
{
    return v1 + ((v2 - v1)*factor);
}
///////////////////////////////////////////////////////////////////////////////////////

///////////////////////////////////////////////////////////////////////////////////////
// Square interpolation of two variables
///////////////////////////////////////////////////////////////////////////////////////
template <typename TReal>
M_FORCEINL TReal    msqrp(TReal v1, TReal v2, TReal factor)
{
    TReal f2 = factor*factor;
    return v1 + ((v2 - v1)*f2);
}
